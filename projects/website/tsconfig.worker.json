{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2018",
            "dom"
        ],
        // "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "./src/worker.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
