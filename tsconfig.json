{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "outDir": "dist",
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": true,
        "preserveSymlinks": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "/web_modules/*.js": [
                "node_modules/@types/*",
                "node_modules/*",
                "web_modules/*.js"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}